# Example terraform.tfvars file
# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to version control!

project_id = "your-gcp-project-id"
region     = "us-central1"
environment = "production"

# Service names
backend_service_name  = "consensus-api"
frontend_service_name = "consensus-web"

# Container images (update after building and pushing)
backend_image  = "gcr.io/your-gcp-project-id/consensus-api:latest"
frontend_image = "gcr.io/your-gcp-project-id/consensus-web:latest"

# Database configuration
db_instance_name       = "consensus-db"
db_tier                = "db-f1-micro"  # or db-n1-standard-1 for production
db_deletion_protection = true

# Scaling configuration
backend_min_instances  = "1"
backend_max_instances  = "20"
frontend_min_instances = "0"
frontend_max_instances = "10"
